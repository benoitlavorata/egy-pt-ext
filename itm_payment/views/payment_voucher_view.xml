<?xml version="1.0" encoding="UTF-8"?>

<odoo>
	<data>
		<!--  payment voucher action  -->
		<record id="petty_action_account_payments" model="ir.actions.act_window">
			<field name="name">Payments</field>
			<field name="res_model">account.payment</field>
			<field name="view_mode">tree,form,graph</field>
			<field name="context">{'default_payment_type': 'transfer'}</field>
			<field name="domain">[('payment_type', '=', 'transfer')]</field>
			<field name="view_id" ref="account.view_account_payment_tree"/>
		</record>
		
		<!-- payment voucher menu in account  -->
		<menuitem
			id="menu_payment_petty_cash"
			name="Petty Cash"
			parent="account.menu_finance_entries"
			sequence="3"
			groups="account.group_account_user,account.group_account_manager,account.group_account_invoice"/>

		<menuitem
			id="menu_payment_voucher_list"
			name="Payment Voucher"
			action="petty_action_account_payments"
			parent="menu_payment_petty_cash"
			sequence="1"
			groups="account.group_account_user,account.group_account_manager,account.group_account_invoice"/>
	</data>
</odoo>
