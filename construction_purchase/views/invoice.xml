<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- Inherit Form view -->
        <record id="invoice_supplier_form" model="ir.ui.view">
            <field name="name">account.invoice.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <field name="invoice_vendor_bill_id" position="after">
                    <field name="project_related"/>
                </field>
                <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='analytic_account_id']"
                       position="after">
                    <field name="project_id" invisible="1"/>
                    <field name="phase_id" attrs="{'column_invisible': [('parent.project_related', 'in', [False])]}"/>
                    <field name="task_id"
                           attrs="{'column_invisible': [('parent.project_related', 'in', [False])], 'required': [('phase_id', 'not in', [False])]}"/>
                    <field name="project_boq_category"
                           attrs="{'column_invisible': [('parent.project_related', 'in', [False])], 'required': [('phase_id', 'not in', [False])]}"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
